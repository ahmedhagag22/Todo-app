<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="texttoolbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="splashBkg">
        <item name="android:background">@drawable/splash</item>
    </style>

    <style name="Bkg_app">
        <item name="android:background">@color/mintgreen</item>
    </style>

    <style name="floating_button">
        <item name="android:backgroundTint">@color/blue</item>
    </style>


    <style name="tv_addTask">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_text_all">
        <item name="android:background">@color/white</item>

    </style>

    <style name="btn_add">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:padding">13dp</item>
        <item name="android:backgroundTint">@color/blue</item>

    </style>

    <style name="line">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="tv_titleTasks">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tv_descTasks">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="bkg_card_item">
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="weakEnd">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="days">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="clander">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="img_bkgEdit">
        <item name="android:src">@color/blue</item>
    </style>

    <style name="txt_Edit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_date">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="textView_setting_lang_mode">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>

    </style>


</resources>