<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar">
        <item name="android:background">@color/blue_dark</item>
    </style>

    <style name="texttoolbar">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="splashBkg">
        <item name="android:background">
            @drawable/splash_dark
        </item>
    </style>

    <style name="Bkg_app">
        <item name="android:background">@color/bkg_dark</item>

    </style>

    <style name="floating_button">
        <item name="android:backgroundTint">@color/blue_dark</item>

    </style>


</resources>